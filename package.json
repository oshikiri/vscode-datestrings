{
  "name": "datesuggest",
  "description": "Suggest date strings of recent dates",
  "author": "Takamasa Oshikiri",
  "license": "MIT",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/oshikiri/vscode-datesuggest"
  },
  "publisher": "oshikiri",
  "categories": [],
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "nodejs": "^14",
    "vscode": "^1.51.0"
  },
  "activationEvents": [
    "onLanguage:ledger",
    "onLanguage:yaml"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "datesuggest",
      "properties": {
        "datesuggest.maxDaysBefore": {
          "scope": "resource",
          "type": "number",
          "default": 27,
          "description": "Add dates from ${maxDaysBefore} days ago to yesterday"
        },
        "datesuggest.maxDaysAfter": {
          "scope": "resource",
          "type": "number",
          "default": 7,
          "description": "Add dates from tomorrow to ${maxDaysAfter} days after"
        },
        "datesuggest.dateFormat": {
          "scope": "resource",
          "type": "string",
          "default": "YYYY/MM/DD",
          "description": "See https://day.js.org/docs/en/display/format"
        },
        "datesuggest.today": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "Specify base date (for testing)"
        }
      }
    },
    "languages": [
      {
        "id": "ledger",
        "aliases": [
          "Ledger journal"
        ],
        "extensions": [
          ".ledger"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "cd client && cd .. && npm run compile",
    "format": "./node_modules/.bin/prettier --write {client,server}/**/*.ts",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "package": "./node_modules/.bin/vsce package",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.3",
    "@types/node": "^14",
    "mocha": "^8.2.1",
    "prettier": "^2.1.2",
    "typescript": "^4.0.5",
    "vsce": "^1.81.1"
  }
}
