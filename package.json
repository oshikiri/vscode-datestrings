{
  "name": "datestrings",
  "displayName": "Autocomplete datestrings",
  "description": "Autocomplete recent dates on VS Code",
  "icon": "icon.png",
  "author": "Takamasa Oshikiri",
  "license": "MIT",
  "version": "1.4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/oshikiri/vscode-datestrings"
  },
  "publisher": "oshikiri",
  "categories": [
    "Snippets"
  ],
  "keywords": [
    "keybindings"
  ],
  "engines": {
    "nodejs": "^22",
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "datestrings",
      "properties": {
        "datestrings.maxDaysBefore": {
          "scope": "resource",
          "type": "number",
          "default": 27,
          "description": "Add dates from ${maxDaysBefore} days ago to yesterday"
        },
        "datestrings.maxDaysAfter": {
          "scope": "resource",
          "type": "number",
          "default": 7,
          "description": "Add dates from tomorrow to ${maxDaysAfter} days after"
        },
        "datestrings.dateFormat": {
          "scope": "resource",
          "type": "string",
          "default": "YYYY/MM/DD",
          "description": "See https://day.js.org/docs/en/display/format"
        },
        "datestrings.today": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "Specify base date (for testing)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "cd client && cd .. && npm run compile",
    "format": "prettier --list-different --write .",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "package": "vsce package",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "mocha --require ts-node/register --recursive server/**/*.test.ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.9",
    "@vscode/vsce": "^2.29.0",
    "mocha": "^10.8.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
